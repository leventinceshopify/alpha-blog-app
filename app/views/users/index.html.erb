<p id="notice"><%= notice %></p>
<div align="center">
    <%= will_paginate %>
</div>

<h1>All Alpha Bloggers</h1>

<table>
  <thead>
    <tr>
      <th>Created: </th>
      <th>  </th>
      <th>Number of Articles </th>
      <th>User Name </th>
      <!-- <th colspan="3"></th> -->

      <th>Email </th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>


      <tr>
        <td> <%=time_ago_in_words(user.created_at) if user.created_at%>  ago </td>
        <td><%= gravatar_for user %></td>
        <td><%= user.articles.count %> article</td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

